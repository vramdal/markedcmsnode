doctype html
mixin block(id, content)
  include includes/content
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    script(src='/bower_components/platform/platform.js')
    link(rel='import', href='/bower_components/polymer/polymer.html')
    script(type='text/javascript', src='/javascripts/admin.js')
    link(rel='import', href="/components/markdown-editor.html")
  body
      each contentBlock in contentBlocks
        +block(contentBlock.id, contentBlock.content)